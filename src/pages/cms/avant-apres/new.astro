---
import CmsLayout from '@/layouts/CmsLayout.astro';
---

<CmsLayout title="Nouveau cas">
  <div class="grid gap-6 lg:grid-cols-[minmax(0,1fr)_320px]">
    <section class="cms-card p-7">
      <div class="text-xs font-semibold uppercase tracking-wide text-ink/50">Avant/Apres</div>
      <h1 class="mt-2 font-display text-3xl tracking-tight">Nouveau cas</h1>

      <div class="mt-8 grid gap-5">
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Titre</span>
          <input class="cms-input" placeholder="ex: Rhinoplastie - 6 mois" />
        </label>
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Description courte</span>
          <textarea rows={3} class="cms-textarea"></textarea>
        </label>
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Zone</span>
          <input class="cms-input" placeholder="Visage, Seins, Silhouette..." />
        </label>

        <div class="grid gap-4 sm:grid-cols-2">
          <div class="rounded-2xl border border-ink/10 bg-mist p-4">
            <div class="text-xs font-semibold uppercase tracking-wide text-ink/50">Avant</div>
            <div class="mt-3 h-32 rounded-xl border border-dashed border-ink/20 bg-paper"></div>
            <button type="button" class="mt-3 btn btn-pill btn-sm btn-secondary">Ajouter photo</button>
          </div>
          <div class="rounded-2xl border border-ink/10 bg-mist p-4">
            <div class="text-xs font-semibold uppercase tracking-wide text-ink/50">Apres</div>
            <div class="mt-3 h-32 rounded-xl border border-dashed border-ink/20 bg-paper"></div>
            <button type="button" class="mt-3 btn btn-pill btn-sm btn-secondary">Ajouter photo</button>
          </div>
        </div>

        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Caption (facultatif)</span>
          <input class="cms-input" placeholder="ex: Resultat a 6 mois" />
        </label>
      </div>
    </section>

    <aside class="cms-panel p-6">
      <div class="text-xs font-semibold uppercase tracking-wide text-ink/50">Consentement</div>
      <label class="mt-3 flex items-center gap-2 text-sm">
        <input type="checkbox" class="h-4 w-4" />
        <span>Consentement obtenu</span>
      </label>
      <label class="mt-4 grid gap-2 text-sm">
        <span class="font-semibold text-ink/80">Date du consentement</span>
        <input class="cms-input" placeholder="JJ/MM/AAAA" />
      </label>
      <label class="mt-4 grid gap-2 text-sm">
        <span class="font-semibold text-ink/80">Reference interne</span>
        <input class="cms-input" placeholder="Ref dossier" />
      </label>

      <div class="mt-6 space-y-3">
        <button type="button" class="btn btn-pill btn-md btn-primary w-full">Enregistrer brouillon</button>
        <button type="button" class="btn btn-pill btn-md btn-secondary w-full">Publier</button>
      </div>
      <div class="mt-4 text-xs text-ink/60">UI uniquement â€” sauvegarde activee apres integration.</div>
    </aside>
  </div>
</CmsLayout>
