---
import CmsLayout from '@/layouts/CmsLayout.astro';
---

<CmsLayout title="Nouvelle demande">
  <div class="grid gap-6 lg:grid-cols-[minmax(0,1fr)_320px]">
    <section class="cms-card p-7">
      <div class="text-xs font-semibold uppercase tracking-wide text-ink/50">Nouvelle demande</div>
      <h1 class="mt-2 font-display text-3xl tracking-tight">Saisir une demande</h1>

      <div class="mt-8 grid gap-5">
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Nom du patient</span>
          <input class="cms-input" placeholder="Nom complet" />
        </label>
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Telephone</span>
          <input class="cms-input" placeholder="+216 ..." />
        </label>
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Canal</span>
          <select class="cms-select">
            <option>Telephone</option>
            <option>WhatsApp</option>
          </select>
        </label>
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Motif / categorie</span>
          <input class="cms-input" placeholder="Visage, main, silhouette..." />
        </label>
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Date souhaitee</span>
          <input class="cms-input" placeholder="JJ/MM/AAAA" />
        </label>
        <label class="grid gap-2 text-sm">
          <span class="font-semibold text-ink/80">Notes internes</span>
          <textarea
            rows={5}
            class="cms-textarea"
            placeholder="Resume de la demande, priorites, disponibilites..."
          ></textarea>
        </label>
      </div>
    </section>

    <aside class="cms-panel p-6">
      <div class="text-xs font-semibold uppercase tracking-wide text-ink/50">Actions</div>
      <div class="mt-3 space-y-3">
        <button type="button" class="btn btn-pill btn-md btn-primary w-full">Creer la demande</button>
        <a href="/cms/bookings" class="btn btn-pill btn-md btn-secondary w-full">Annuler</a>
      </div>
      <div class="mt-4 text-xs text-ink/60">Sauvegarde activee apres integration.</div>
    </aside>
  </div>
</CmsLayout>
