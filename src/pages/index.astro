---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { site } from '@/lib/site';
import { interventionCategories, interventionCategoryHref } from '@/lib/interventions';
---

<BaseLayout title="Accueil" description={site.description}>
  <section class="grain relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(900px_circle_at_20%_20%,rgba(185,111,84,0.20),transparent_55%),radial-gradient(900px_circle_at_80%_30%,rgba(231,219,200,0.55),transparent_60%)]"></div>
    <div class="relative mx-auto max-w-6xl px-4 py-14 sm:py-20">
      <div class="grid items-center gap-10 sm:grid-cols-12">
        <div class="sm:col-span-6">
          <div class="max-w-2xl">
            <p class="text-sm font-semibold text-ink/70">
              Chirurgie plastique, esthétique et reconstructrice — chirurgie de la main
            </p>
            <h1 class="mt-3 font-display text-4xl tracking-tight sm:text-5xl">
              Une approche précise, naturelle et personnalisée à {site.contact.city}.
            </h1>
            <p class="mt-5 text-lg text-ink/75">
              Médecine esthétique, visage, silhouette, seins, chirurgie réparatrice et chirurgie de la main.
              Information claire et rendez-vous par téléphone ou WhatsApp.
            </p>

            <div class="mt-7 flex flex-col gap-3 sm:flex-row">
              <a href="/contact" class="btn btn-pill btn-lg btn-primary home-cta-primary">Prendre rendez-vous</a>
              <a href={site.links.tel} class="btn btn-pill btn-lg btn-secondary">Appeler</a>
              <a href={site.links.whatsapp} class="btn btn-pill btn-lg btn-secondary">WhatsApp</a>
            </div>

            <div class="mt-2 text-xs text-ink/60">Réponse selon disponibilités.</div>

            <div class="mt-8 grid gap-3 text-sm text-ink/70 sm:grid-cols-3">
              <div class="rounded-2xl border border-ink/10 bg-paper/70 p-4">Consultation et indication adaptée</div>
              <div class="rounded-2xl border border-ink/10 bg-paper/70 p-4">Résultat naturel et harmonieux</div>
              <div class="rounded-2xl border border-ink/10 bg-paper/70 p-4">Suivi et information claire</div>
            </div>
          </div>
        </div>

        <div class="sm:col-span-6">
          <div class="fx-frame fx-glow fx-lift relative overflow-hidden rounded-3xl bg-paper">
            <img
              src="/images/hero-clinic-01.webp"
              width="1536"
              height="1024"
               alt="Cabinet médical, ambiance lumineuse et apaisante"
              loading="eager"
              fetchpriority="high"
              class="h-[18rem] w-full object-cover sm:h-[24rem]"
            />
            <div class="pointer-events-none absolute inset-0 bg-[radial-gradient(900px_circle_at_30%_20%,rgba(248,245,240,0.15),transparent_55%),linear-gradient(to_top,rgba(248,245,240,0.35),transparent_55%)]"></div>
          </div>
          <div class="mt-3 flex items-center justify-between text-xs text-ink/60">
            <span>Cabinet - {site.contact.city}</span>
            <a href="/contact" class="link">Rendez-vous →</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 pb-10">
    <div class="flex items-baseline justify-between gap-4 pb-4">
      <h2 class="font-display text-2xl tracking-tight">Choisir votre besoin</h2>
      <p class="text-sm text-ink/65">Deux parcours clairs pour aller à l’essentiel.</p>
    </div>

    <div class="grid gap-4 sm:grid-cols-2">
      <article class="group card-focus fx-frame fx-lift overflow-hidden rounded-3xl bg-paper">
        <div class="relative h-32 w-full overflow-hidden">
          <img
            src="/images/thumbnails/medecine-esthetique.webp"
            alt="Soins esthétiques et harmonisation du visage"
            class="h-full w-full object-cover"
            loading="lazy"
          />
          <div class="pointer-events-none absolute inset-0 bg-[linear-gradient(to_top,rgba(20,20,19,0.35),transparent_55%)]"></div>
        </div>
        <div class="space-y-3 p-6">
          <div>
            <div class="font-display text-xl tracking-tight">Médecine esthétique & visage</div>
            <p class="mt-1 text-sm text-ink/70">Injectables, qualité de peau, harmonisation douce et naturelle.</p>
          </div>
          <ul class="space-y-1 text-sm text-ink/75">
            <li>• Traitements doux et personnalisés</li>
            <li>• Focus naturel sur le visage et le regard</li>
            <li>• Information claire sur suites et entretien</li>
          </ul>
          <div class="flex flex-wrap gap-2">
            <a href="/interventions/medecine-esthetique" class="btn btn-pill btn-md btn-primary">Explorer l’esthétique</a>
            <a href="/interventions/visage" class="link text-sm">Visage</a>
            <a href="/interventions/silhouette" class="link text-sm">Silhouette</a>
          </div>
        </div>
      </article>

      <article class="group card-focus fx-frame fx-lift overflow-hidden rounded-3xl bg-paper">
        <div class="relative h-32 w-full overflow-hidden">
          <img
            src="/images/thumbnails/chirurgie-de-la-main.webp"
            alt="Chirurgie de la main et reconstruction"
            class="h-full w-full object-cover"
            loading="lazy"
          />
          <div class="pointer-events-none absolute inset-0 bg-[linear-gradient(to_top,rgba(20,20,19,0.35),transparent_55%)]"></div>
        </div>
        <div class="space-y-3 p-6">
          <div>
            <div class="font-display text-xl tracking-tight">Main & reconstruction</div>
            <p class="mt-1 text-sm text-ink/70">Pathologies, traumatologie, réparatrice et suivi spécialisé.</p>
          </div>
          <ul class="space-y-1 text-sm text-ink/75">
            <li>• Douleurs, compressions nerveuses, séquelles</li>
            <li>• Traumatologie & reconstruction personnalisée</li>
            <li>• Accompagnement et récupération fonctionnelle</li>
          </ul>
          <div class="flex flex-wrap gap-2">
            <a href="/interventions/chirurgie-de-la-main" class="btn btn-pill btn-md btn-primary">Explorer la main</a>
            <a href="/interventions/chirurgie-reparatrice" class="link text-sm">Chirurgie réparatrice</a>
          </div>
        </div>
      </article>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 py-14">
    <div class="grid gap-10 sm:grid-cols-12">
      <div class="sm:col-span-5">
        <h2 class="font-display text-3xl tracking-tight">Tout savoir sur le docteur</h2>
        <p class="mt-4 text-ink/75">
          Je suis la Dr Sirine Soussi, chirurgienne spécialisée en chirurgie plastique, esthétique et
          reconstructrice, avec une expertise en chirurgie de la main. Formée à la Faculté de Médecine
          de Tunis, j’ai complété mon internat puis mon résidanat (2012-2016) en Tunisie, avec une
          expérience hospitalière à Paris (Hôpital Saint-Louis).
        </p>
        <p class="mt-4 text-ink/75">
          En 2016, j’ai soutenu une thèse sur la prise en charge du dermatofibrosarcome protubérant,
          distinguée (hauts honneurs, félicitations du jury). Mon activité s’articule autour de la
          chirurgie de la main et du poignet, de la reconstruction, des séquelles de brûlures et de
          certaines pathologies cutanées.
        </p>
      </div>
      <div class="sm:col-span-7">
        <div class="fx-frame fx-glow fx-lift rounded-3xl bg-mist p-8 shadow-soft">
          <div class="mb-6 flex items-center gap-5">
            <img
              src="/images/doctor/dr-sirine-soussi-01.png"
              width="400"
              height="500"
              alt="Portrait du Dr Sirine Soussi"
              loading="lazy"
              class="h-20 w-20 shrink-0 rounded-2xl border border-ink/10 object-cover"
            />
            <div class="min-w-0">
              <div class="font-display text-2xl tracking-tight">Dr Sirine Soussi</div>
               <div class="mt-1 text-sm text-ink/70">Chirurgie plastique, esthétique, reconstructrice - chirurgie de la main</div>
                <a href="/dr-sirine-soussi" class="link mt-2 inline-flex text-sm">
                  En savoir plus →
                </a>
            </div>
          </div>

          <div class="mt-4 grid gap-3 sm:grid-cols-2">
            <div class="rounded-2xl border border-ink/10 bg-paper/70 p-4 text-sm text-ink/75">
              <div class="text-xs font-semibold uppercase tracking-wide text-ink/60">En bref</div>
              <ul class="mt-2 space-y-1">
                <li>Spécialités: esthétique, reconstructrice, main</li>
                <li>Expérience hospitalière: Hôpital Saint-Louis (Paris)</li>
                <li>Faculté de Médecine de Tunis</li>
              </ul>
            </div>
            <div class="rounded-2xl border border-ink/10 bg-paper/70 p-4 text-sm text-ink/75">
              <div class="text-xs font-semibold uppercase tracking-wide text-ink/60">Consultation</div>
              <ul class="mt-2 space-y-1">
                <li>Indication personnalisée</li>
                <li>Information claire et consentement</li>
                <li>Suivi et accompagnement</li>
              </ul>
            </div>
          </div>

          <div class="grid gap-6 sm:grid-cols-2">
            <div>
              <div class="text-xs font-semibold uppercase tracking-wide text-ink/60">Spécialités</div>
              <ul class="mt-2 space-y-1 text-sm text-ink/75">
                <li>Chirurgie plastique, esthétique, reconstructrice</li>
                <li>Chirurgie de la main</li>
              </ul>
            </div>
            <div>
              <div class="text-xs font-semibold uppercase tracking-wide text-ink/60">Parcours</div>
              <ul class="mt-2 space-y-1 text-sm text-ink/75">
                <li>Faculté de Médecine de Tunis</li>
                <li>Résidanat 2012-2016 (Tunisie)</li>
                <li>Expérience: Hôpital Saint-Louis (Paris)</li>
              </ul>
            </div>
            <div>
              <div class="text-xs font-semibold uppercase tracking-wide text-ink/60">Thèse (2016)</div>
              <p class="mt-2 text-sm text-ink/75">
                The Role of Plastic Surgery in the Management of Dermatofibrosarcoma Protuberans.
              </p>
            </div>
            <div>
              <div class="text-xs font-semibold uppercase tracking-wide text-ink/60">Contact</div>
              <p class="mt-2 text-sm text-ink/75">{site.contact.phoneDisplay}</p>
              <p class="text-sm text-ink/75">{site.contact.addressLines.join(' - ')}</p>
            </div>
          </div>

          <div class="mt-7 flex flex-col gap-3 sm:flex-row">
            <a href="/contact#consultation" class="btn btn-pill btn-lg btn-primary">Comprendre la consultation</a>
            <a href="/interventions" class="btn btn-pill btn-lg btn-secondary">Voir les interventions</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 pb-14">
    <div class="rounded-3xl border border-ink/10 bg-paper p-8 shadow-soft">
      <div class="flex flex-col items-start justify-between gap-6 sm:flex-row sm:items-center">
        <div>
          <h2 class="font-display text-2xl tracking-tight">Interventions</h2>
          <p class="mt-2 text-ink/70">Explorer les catégories et trouver l’information adaptée.</p>
        </div>
         <a href="/interventions" class="btn btn-pill btn-md btn-accent">Accéder aux interventions</a>
      </div>

      <div class="mt-8 grid gap-4 sm:grid-cols-3">
        {interventionCategories.slice(0, 6).map((c) => (
            <a
              href={interventionCategoryHref(c.key)}
              class="group card-focus fx-frame fx-lift overflow-hidden rounded-2xl bg-mist"
            >
            <div class="relative aspect-[4/3] w-full">
              <img
                src={c.thumbnailSrc}
                width="1200"
                height="900"
                alt={c.title}
                loading="lazy"
                class="h-full w-full object-cover"
              />
              <div class="pointer-events-none absolute inset-0 bg-[linear-gradient(to_top,rgba(20,20,19,0.35),transparent_60%)]"></div>
            </div>
            <div class="p-5">
              <div class="font-display text-lg tracking-tight">{c.title}</div>
              <div class="mt-2 text-sm text-ink/70">{c.description}</div>
              <div class="mt-4 text-sm font-semibold text-ink/80 transition group-hover:text-ink">Découvrir →</div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .fx-frame {
    border: 1px solid transparent;
    background:
      linear-gradient(rgb(var(--c-paper))) padding-box,
      linear-gradient(135deg, rgba(var(--c-sand) / 0.4), rgba(var(--c-copper) / 0.35), transparent) border-box;
    box-shadow: 0 14px 38px rgba(17, 24, 39, 0.04);
    transition: box-shadow 200ms ease, transform 200ms ease, border-color 200ms ease;
  }

  .fx-glow:hover,
  .fx-glow:focus-visible,
  .fx-glow:focus-within {
    box-shadow:
      0 20px 50px rgba(17, 24, 39, 0.08),
      0 0 0 1px rgba(var(--c-copper) / 0.25),
      0 18px 60px rgba(var(--c-copper) / 0.18);
  }

  .fx-lift:hover {
    transform: translateY(-2px);
    box-shadow:
      0 18px 48px rgba(17, 24, 39, 0.09),
      0 0 0 1px rgba(var(--c-copper) / 0.18);
  }

  .home-cta-primary {
    box-shadow:
      0 14px 38px rgba(17, 24, 39, 0.1),
      0 0 0 0px rgba(var(--c-copper) / 0.0);
    transition: box-shadow 200ms ease, transform 200ms ease;
  }

  .home-cta-primary:hover,
  .home-cta-primary:focus-visible {
    box-shadow:
      0 20px 56px rgba(17, 24, 39, 0.16),
      0 0 0 2px rgba(var(--c-copper) / 0.32);
    transform: translateY(-1px);
  }

</style>
